generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model User{
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password   String
  role       Role      @default(Student)
  feedbacks Feedback[]



  courses Course[]

  
}

model Course{
  id Int @id @default(autoincrement())
  name String @unique
  description String
  students User[]
  subjects Subject[]
  feedbacks Feedback[]
}

model Subject{
  id Int @id @default(autoincrement())
  title String 
  courseId Int
  course Course @relation(fields: [courseId],references: [id])
  feedbacks Feedback[]

}


model Feedback{

  id Int @id @default(autoincrement())
  text String
  rating Int

  courseId Int?
  subjectId Int?
  authorId Int?


  author User? @relation(fields: [authorId],references: [id])
  
  

  course Course? @relation(fields: [courseId],references: [id])
  subject Subject? @relation(fields: [subjectId],references: [id])





}


enum Role{
  Student   
  Admin

}
